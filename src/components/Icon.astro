---
import { Icon as AstroIcon } from "astro-icon/components";
import { twMerge } from "tailwind-merge";

/**
 *  Icon sets and names: https://icon-sets.iconify.design/
 */
interface Props {
  name: string;
  twColor?: string;
  ariaLabel?: string;
  size?: number;
}

const { name, twColor, ariaLabel, size } = Astro.props;
---

<AstroIcon
  name={name}
  size={size ?? 32}
  class={twMerge("inline", twColor ?? "text-slate-500")}
  aria-label={ariaLabel}
  title={ariaLabel}
/>
