---
import { SITE_TITLE } from "~/consts";
import BaseHead from "../components/BaseHead.astro";

type Props = {
  title: string;
  description?: string;
};

const { title = SITE_TITLE, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <div class="p-4">
      <a href="/">anders.co</a>
      <a href="/blog">Blog</a>
      <a href="/about">About</a>
    </div>
  </body><main class="prose">
    <slot />
  </main>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
