---
import { getCollection } from "astro:content";
import type { BlogPost } from "~/types/BlogPost";
import FormattedDate from "./FormattedDate.astro";
import Icon from "./Icon.astro";

const isProd = import.meta.env.PROD;

const posts: BlogPost[] = (await getCollection("blog"))
  .filter((p: BlogPost) => (isProd ? !p.data.isDraft : true))
  .sort(
    (a: BlogPost, b: BlogPost) =>
      b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
  );
---

<ul
  class="ml-0 pl-0 list-none prose-p:mt-0.5 prose-p:leading-snug prose-a:no-underline hover:prose-a:underline"
>
  {
    posts.map((post) => (
      <li class="pb-1">
        <a href={`/blog/${post.id}/`}>
          {/* <img
            width={720}
            height={360}
            src={post.data.heroImage}
            alt=""
          /> */}
          <h3>
            {post.data.isDraft && "[DRAFT] "}
            {post.data.title}
          </h3>
        </a>
        <p class="text-sm flex items-center gap-1">
          <Icon icon="mdi:calendar-month" size={18} />
          <FormattedDate date={post.data.pubDate} />
        </p>
        <p>{post.data.description}</p>
      </li>
    ))
  }
</ul>
