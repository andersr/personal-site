---
import { Image } from "astro:assets";
import { twMerge } from "tailwind-merge";
import arPhotoWeb from "../../assets/images/homepage/ar-photo-web.jpg";

interface Props {
  size: number;
  twStyles?: string;
}

const { size, twStyles } = Astro.props;
---

<Image
  src={arPhotoWeb}
  alt={"Ander Ramsay bio photo"}
  class={twMerge("mx-auto m-0", twStyles)}
  height={size}
  width={size}
/>
