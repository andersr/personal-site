---
import { Icon as AstroIcon } from "astro-icon/components";
import { twMerge } from "tailwind-merge";

/**
 *  Icon sets and names: https://icon-sets.iconify.design/
 */
interface Props {
  name: string;
  twColor?: string;
}

const { name, twColor } = Astro.props;
---

<AstroIcon
  name={`material-symbols-light:${name}`}
  size={32}
  class={twMerge("inline", twColor ?? "text-slate-400")}
/>
