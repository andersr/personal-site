---
import { twMerge } from "tailwind-merge";
import type { IconLinkProps } from "~/types/Icon";
import BulletDivider from "./BulletDivider.astro";
import IconLink from "./IconLink.astro";

interface Props {
  items: IconLinkProps[];
  bulletDivider?: boolean;
  twColor?: string;
  size?: number;
}

const { items, bulletDivider, size, twColor } = Astro.props;
---

<ul
  class={twMerge(
    "ml-0 pl-0 list-none flex items-center",
    bulletDivider ? "gap-5 md:gap-0" : "gap-3",
  )}
>
  {
    items.map((item) => (
      <li>
        {bulletDivider && (
          <span class="hidden md:inline">
            <BulletDivider />
          </span>
        )}
        <IconLink
          item={{
            ...item,
            size: size ?? item.size,
            twColor: twColor ?? item.twColor,
          }}
        />
      </li>
    ))
  }
</ul>
