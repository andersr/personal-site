---
import { Icon as AstroIcon } from "astro-icon/components";
import { twMerge } from "tailwind-merge";

/**
 *  Icon sets and names: https://icon-sets.iconify.design/
 */
interface Props {
  icon: string;
  twColor?: string;
  title?: string;
  size?: number;
}

const { icon, twColor, title, size } = Astro.props;
---

<AstroIcon
  name={icon}
  size={size ?? 32}
  class={twMerge("inline", twColor ?? "text-slate-500")}
  title={title}
/>
