---
interface Props {
  href: string;
  src: string;
}

const { href, src } = Astro.props;
---

<div class="size-[300px] md:size-[400px] mx-auto mt-6 mb-16 prose-p:mt-0">
  <iframe src={src} class="size-full"></iframe>
  <p class="">
    <a class="text-slate-500 text-sm" href={href}>via GIPHY</a>
  </p>
</div>
