---
import IconLinkList from "~/components/IconLinkList.astro";
import PageLayout from "~/layouts/PageLayout.astro";
import type { IconListItem } from "~/types/IconList";
import HeroImage from "../components/Hero/HeroImage.astro";
import AboutContent from "../content/static/about.mdx";

const icons: IconListItem[] = [
  {
    name: "proicons:bluesky",
    href: "https://bsky.app/profile/andersco.bsky.social",
    ariaLabel: "Bluesky",
  },
  {
    name: "mdi:github",
    href: "https://github.com/andersr",
    ariaLabel: "GitHub",
  },
  {
    name: "mdi:instagram",
    href: "https://instagram.com",
    ariaLabel: "Instagram",
  },
  {
    name: "mdi:linkedin",
    href: "https://www.linkedin.com/in/andersramsay/",
    ariaLabel: "LinkedIn",
  },
  {
    name: "simple-icons:medium",
    href: "https://medium.com/@andersco",
    ariaLabel: "Medium",
    size: 30,
  },
  {
    name: "mdi:stack-overflow",
    href: "https://stackoverflow.com/users/2008639/andersr",
    ariaLabel: "Stack Overflow",
  },
  {
    name: "simple-icons:threads",
    href: "https://www.threads.net/@andersr",
    ariaLabel: "Threads",
  },
];
---

<PageLayout title="About" topSectionOffset="mt-10">
  <div class="flex flex-col items-center prose-ul:p-0 prose-li:pl-0">
    <HeroImage size={200} twStyles="rounded-full" />
    <IconLinkList items={icons} />
  </div>
  <AboutContent />
</PageLayout>
